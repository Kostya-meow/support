# =============================================================================
# СЕКРЕТНЫЕ ДАННЫЕ - НЕ КОММИТИТЬ В GIT!
# =============================================================================

# === Telegram Bot ===
TELEGRAM_BOT_TOKEN=your_bot_token_here

# === LLM API (OpenAI-compatible) ===
# API ключ для доступа к LLM
LLM_API_KEY=your_llm_api_key_here
# Базовый URL (если используете не OpenAI)
LLM_API_BASE=https://demo.ai.sfu-kras.ru/v1
# Модель (можно переопределить config.yaml)
LLM_MODEL=gpt-4o-mini

# === OpenAI API (альтернативные названия) ===
# Если используете OpenAI напрямую
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# === Session Security ===
# Секретный ключ для подписи сессий (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ В ПРОДАКШЕНЕ!)
SECRET_KEY=change_this_to_random_string_in_production
# Имя cookie
SESSION_COOKIE_NAME=support_session
# Использовать secure cookie (только для HTTPS)
SESSION_COOKIE_SECURE=false

# === Database (optional) ===
# DATABASE_URL=sqlite:///./tickets.db
# KNOWLEDGE_DB_URL=sqlite:///./knowledge.db
# USERS_DB_URL=sqlite:///./users.db

